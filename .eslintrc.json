{
    "extends": "standard",
    "rules": {
        "one-var": 0,
        "semi": ["error", "always"],
        "no-extra-semi": "error",
        "no-unsafe-finally": 0,
        "space-before-function-paren": 0,
        "indent": ["error", 4, {"VariableDeclarator": { "var": "first", "let": "first", "const": "first" }, "SwitchCase": 1, "MemberExpression": 1}],
        "no-new": 0
    },
    "globals": {
        "process":false,
        "__dirname":false,
        "module": false,
        "require": false,
        "define": false,
        "describe": false,
        "sinon": false,
        "expect": false,
        "should": false,
        "before": false,
        "beforeEach": false,
        "after": false,
        "afterEach": false,
        "it": false,
        "test": false
    }
}